<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e6e6e6"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/h5_img_network_error"/>

    <TextView
        android:id="@+id/net_error1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="哎呀!找不到网络了"
        android:textColor="#858586"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/net_error2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="请检查网络设置后重新尝试"
        android:textColor="#858586"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_fresh"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/h5_btn_round_orange"
        android:text="点击刷新"
        android:textColor="#fff"
        android:textSize="18sp"/>

</LinearLayout>